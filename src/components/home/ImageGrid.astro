---
import ImageReveal from "@components/react/ImageReveal";
import { Image } from "astro:assets";
import warehouseImg from "@assets/photo-1566576721346-d4a3b4eaeb55.jpg";
import fleetImg from "@assets/photo-1601584115197-04ecc0da31d7.jpg";
import manufacturingImg from "@assets/photo-1581091226825-a6a2a5aee158.jpg";
import commandCenterImg from "@assets/photo-1551288049-bebda4e38f71.jpg";
import distributionImg from "@assets/photo-1586528116311-ad8dd3c8310d.jpg";
---

<section class="py-24 bg-white">
  <div class="container mx-auto px-4 sm:px-6 lg:px-8">
    <!-- Header -->
    <div class="text-center mb-16">
      <div
        class="inline-block px-4 py-2 mb-4 bg-teal-100 text-teal-800 text-sm font-semibold rounded-full"
      >
        Keunggulan Kami
      </div>
      <h2 class="text-4xl md:text-5xl font-bold text-slate-900 mb-6">
        Solusi Digital yang
        <span
          class="text-transparent bg-clip-text bg-linear-to-r from-blue-600 to-teal-600"
        >
          Andal & Real-Time
        </span>
      </h2>
      <p class="text-xl text-slate-600 max-w-3xl mx-auto leading-relaxed">
        Kami membangun sistem aplikasi yang terintegrasi, scalable, real-time,
        dan aman untuk mendukung pertumbuhan bisnis Anda.
      </p>
    </div>

    <!-- Grid -->
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
      <!-- Sistem Terintegrasi -->
      <div class="md:row-span-2">
        <ImageReveal client:load delay={0}>
          <div
            class="relative h-full group overflow-hidden rounded-2xl shadow-xl"
          >
            <Image
              src={warehouseImg}
              alt="Sistem terintegrasi"
              class="w-full h-full object-cover group-hover:scale-105 transition-transform duration-500"
            />
            <div
              class="absolute inset-0 bg-linear-to-t from-slate-900/80 via-transparent to-transparent"
            >
            </div>
            <div class="absolute bottom-0 left-0 right-0 p-8 text-white">
              <h3 class="text-2xl font-bold mb-2">Sistem Terintegrasi</h3>
              <p class="text-gray-200">
                Seluruh modul aplikasi saling terhubung dalam satu sistem
                terpusat untuk pengelolaan data yang rapi dan efisien.
              </p>
            </div>
          </div>
        </ImageReveal>
      </div>

      <!-- Scalable -->
      <ImageReveal client:load delay={0.1}>
        <div
          class="relative h-64 lg:h-auto group overflow-hidden rounded-2xl shadow-xl"
        >
          <Image
            src={fleetImg}
            alt="Arsitektur scalable"
            class="w-full h-full object-cover group-hover:scale-105 transition-transform duration-500"
          />
          <div
            class="absolute inset-0 bg-linear-to-t from-slate-900/80 via-transparent to-transparent"
          >
          </div>
          <div class="absolute bottom-0 left-0 right-0 p-6 text-white">
            <h3 class="text-xl font-bold mb-1">Scalable & Siap Berkembang</h3>
            <p class="text-sm text-gray-200">
              Arsitektur sistem dirancang agar mudah dikembangkan seiring
              pertumbuhan bisnis.
            </p>
          </div>
        </div>
      </ImageReveal>

      <!-- Performa -->
      <ImageReveal client:load delay={0.2}>
        <div
          class="relative h-64 lg:h-auto group overflow-hidden rounded-2xl shadow-xl"
        >
          <Image
            src={manufacturingImg}
            alt="Performa sistem"
            class="w-full h-full object-cover group-hover:scale-105 transition-transform duration-500"
          />
          <div
            class="absolute inset-0 bg-linear-to-t from-slate-900/80 via-transparent to-transparent"
          >
          </div>
          <div class="absolute bottom-0 left-0 right-0 p-6 text-white">
            <h3 class="text-xl font-bold mb-1">Performa Optimal</h3>
            <p class="text-sm text-gray-200">
              Sistem cepat, stabil, dan efisien meski digunakan dengan data yang
              besar.
            </p>
          </div>
        </div>
      </ImageReveal>

      <!-- Monitoring -->
      <div class="lg:row-start-3">
        <ImageReveal client:load delay={0.3}>
          <div
            class="relative h-64 lg:h-auto group overflow-hidden rounded-2xl shadow-xl"
          >
            <Image
              src={commandCenterImg}
              alt="Monitoring real-time"
              class="w-full h-full object-cover group-hover:scale-105 transition-transform duration-500"
            />
            <div
              class="absolute inset-0 bg-linear-to-t from-slate-900/80 via-transparent to-transparent"
            >
            </div>
            <div class="absolute bottom-0 left-0 right-0 p-6 text-white">
              <h3 class="text-xl font-bold mb-1">Monitoring Real-Time</h3>
              <p class="text-sm text-gray-200">
                Pantau data, aktivitas, dan laporan sistem secara real-time.
              </p>
            </div>
          </div>
        </ImageReveal>
      </div>

      <!-- Keamanan & Support -->
      <div class="lg:row-start-2 lg:col-start-2 lg:row-span-2 lg:col-span-2">
        <ImageReveal client:load delay={0.4}>
          <div
            class="relative h-64 lg:h-auto group overflow-hidden rounded-2xl shadow-xl"
          >
            <Image
              src={distributionImg}
              alt="Keamanan dan support sistem"
              class="w-full h-full object-cover group-hover:scale-105 transition-transform duration-500"
            />
            <div
              class="absolute inset-0 bg-linear-to-t from-slate-900/80 via-transparent to-transparent"
            >
            </div>
            <div class="absolute bottom-0 left-0 right-0 p-6 text-white">
              <h3 class="text-xl font-bold mb-1">
                Aman & Support Jangka Panjang
              </h3>
              <p class="text-sm text-gray-200">
                Standar keamanan aplikasi dan dukungan maintenance untuk menjaga
                sistem tetap stabil.
              </p>
            </div>
          </div>
        </ImageReveal>
      </div>
    </div>

    <!-- CTA -->
    <div class="text-center mt-16">
      <a
        href="/konsultasi"
        class="inline-flex items-center px-8 py-4 font-semibold text-white bg-linear-to-r from-teal-600 to-teal-700 rounded-lg shadow-lg hover:shadow-xl transition-all group"
      >
        Konsultasikan Sistem Anda
        <svg
          class="w-5 h-5 ml-2 group-hover:translate-x-1 transition-transform"
          fill="none"
          stroke="currentColor"
          viewBox="0 0 24 24"
        >
          <path
            stroke-linecap="round"
            stroke-linejoin="round"
            stroke-width="2"
            d="M17 8l4 4m0 0l-4 4m4-4H3"></path>
        </svg>
      </a>
    </div>
  </div>
</section>
