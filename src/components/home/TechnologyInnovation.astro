---
import { Image } from "astro:assets";
import techDashboardImg from "@assets/photo-1551288049-bebda4e38f71.jpg";

interface Technology {
  title: string;
  description: string;
  iconGradient: string;
  iconPath: string;
}

const technologies: Technology[] = [
  {
    title: "Website Modern",
    description:
      "Kami membangun website cepat, responsif, dan SEO-friendly untuk company profile, landing page, dashboard, dan sistem berbasis web.",
    iconGradient: "from-blue-500 to-blue-600",
    iconPath: "M4 6h16M4 10h16M4 14h10M4 18h6",
  },
  {
    title: "Aplikasi Desktop",
    description:
      "Aplikasi desktop untuk Windows, macOS, dan Linux yang stabil dan ringan, cocok untuk sistem kasir, internal tool, dan operasional bisnis.",
    iconGradient: "from-slate-600 to-slate-800",
    iconPath:
      "M9 17v-6a2 2 0 012-2h2a2 2 0 012 2v6m-6 0h6m4 0V7a2 2 0 00-2-2H7a2 2 0 00-2 2v10",
  },
  {
    title: "Aplikasi Mobile",
    description:
      "Pengembangan aplikasi mobile Android dan iOS untuk kebutuhan bisnis, layanan publik, hingga aplikasi operasional harian.",
    iconGradient: "from-teal-500 to-teal-600",
    iconPath:
      "M7 4h10a2 2 0 012 2v12a2 2 0 01-2 2H7a2 2 0 01-2-2V6a2 2 0 012-2z",
  },
  {
    title: "Sistem Realtime",
    description:
      "Mendukung fitur realtime seperti chat, notifikasi, monitoring data, dan sinkronisasi multi-user secara langsung.",
    iconGradient: "from-purple-500 to-purple-600",
    iconPath:
      "M8 12h.01M12 12h.01M16 12h.01M21 12c0 4.418-4.03 8-9 8a9.77 9.77 0 01-4-.83L3 20l1.83-4A7.64 7.64 0 013 12c0-4.418 4.03-8 9-8s9 3.582 9 8z",
  },
  {
    title: "Progressive Web App (PWA)",
    description:
      "Aplikasi web yang bisa di-install seperti aplikasi mobile, mendukung offline mode, notifikasi, dan performa cepat.",
    iconGradient: "from-orange-500 to-orange-600",
    iconPath: "M12 2L3 7v6c0 5 4 9 9 9s9-4 9-9V7l-9-5z",
  },
];
---

<section
  class="py-24 bg-linear-to-b from-slate-900 via-slate-800 to-slate-900 relative overflow-hidden"
>
  <!-- Background Pattern -->
  <div class="absolute inset-0 opacity-10">
    <div
      class="absolute inset-0"
      style="background-image: radial-gradient(circle at 2px 2px, white 1px, transparent 0); background-size: 40px 40px;"
    >
    </div>
  </div>

  <div class="container mx-auto px-4 sm:px-6 lg:px-8 relative z-10">
    <div class="grid grid-cols-1 lg:grid-cols-2 gap-12 items-center">
      <!-- Content -->
      <div>
        <div
          class="inline-block px-4 py-2 mb-4 bg-white/10 backdrop-blur-sm text-white text-sm font-semibold rounded-full"
        >
          Teknologi & Inovasi
        </div>
        <h2 class="text-4xl md:text-5xl font-bold text-white mb-6">
          Teknologi <span
            class="text-transparent bg-clip-text bg-linear-to-r from-blue-400 to-teal-400"
            >Javascript Modern</span
          >
        </h2>
        <p class="text-xl text-slate-300 mb-8 leading-relaxed">
          Menggunakan bahasa pemrograman Javascript modern untuk membangun
          aplikasi yang cepat, responsif, dan SEO-friendly.
        </p>

        <!-- Technology Features -->
        <div class="space-y-6">
          {
            technologies.map((tech) => (
              <div class="flex items-start group">
                <div
                  class={`shrink-0 w-12 h-12 rounded-lg bg-linear-to-br ${tech.iconGradient} flex items-center justify-center mr-4 group-hover:scale-110 transition-transform`}
                >
                  <svg
                    class="w-6 h-6 text-white"
                    fill="none"
                    stroke="currentColor"
                    viewBox="0 0 24 24"
                  >
                    <path
                      stroke-linecap="round"
                      stroke-linejoin="round"
                      stroke-width="2"
                      d={tech.iconPath}
                    />
                  </svg>
                </div>
                <div>
                  <h3 class="text-xl font-semibold text-white mb-2">
                    {tech.title}
                  </h3>
                  <p class="text-slate-400 leading-relaxed">
                    {tech.description}
                  </p>
                </div>
              </div>
            ))
          }
        </div>

        <!-- CTA -->
        <div class="mt-10">
          <a
            href="/documentation"
            class="inline-flex items-center px-6 py-3 text-base font-semibold text-white bg-linear-to-r from-blue-600 to-teal-600 hover:from-blue-700 hover:to-teal-700 rounded-lg shadow-lg hover:shadow-xl transition-all group"
          >
            Lihat Teknologi Kami
            <svg
              class="w-5 h-5 ml-2 group-hover:translate-x-1 transition-transform"
              fill="none"
              stroke="currentColor"
              viewBox="0 0 24 24"
            >
              <path
                stroke-linecap="round"
                stroke-linejoin="round"
                stroke-width="2"
                d="M17 8l4 4m0 0l-4 4m4-4H3"></path>
            </svg>
          </a>
        </div>
      </div>

      <!-- Visual -->
      <div class="relative">
        <div class="relative rounded-2xl overflow-hidden shadow-2xl">
          <Image
            src={techDashboardImg}
            alt="Advanced logistics technology dashboard"
            class="w-full h-full object-cover"
            width={1200}
            height={800}
          />
          <div
            class="absolute inset-0 bg-linear-to-br from-blue-900/80 via-teal-900/60 to-blue-900/80"
          >
          </div>
          <div class="absolute inset-0 flex items-center justify-center p-8">
            <div class="text-center">
              <div
                class="w-24 h-24 mx-auto mb-6 rounded-full bg-linear-to-br from-blue-500 to-teal-500 flex items-center justify-center shadow-2xl"
              >
                <svg
                  class="w-12 h-12 text-white"
                  fill="none"
                  stroke="currentColor"
                  viewBox="0 0 24 24"
                >
                  <path
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    stroke-width="2"
                    d="M13 10V3L4 14h7v7l9-11h-7z"></path>
                </svg>
              </div>
              <h3 class="text-2xl font-bold text-white mb-2">
                Dashboard Realtime
              </h3>
              <p class="text-slate-300">
                Dashboard yang memberikan gambaran real-time status operasional
                sistem.
              </p>
            </div>
          </div>
        </div>

        <!-- Floating Cards -->
        <div
          class="absolute -top-4 -right-4 bg-white rounded-lg p-4 shadow-xl z-20 animate-pulse"
        >
          <div class="flex items-center">
            <div class="w-3 h-3 rounded-full bg-green-500 mr-2"></div>
            <span class="text-sm font-semibold text-slate-900"
              >99.9% Uptime</span
            >
          </div>
        </div>
        <div
          class="absolute -bottom-4 -left-4 bg-white rounded-lg p-4 shadow-xl z-20 animate-pulse"
          style="animation-delay: 0.5s;"
        >
          <div class="flex items-center">
            <div class="w-3 h-3 rounded-full bg-blue-500 mr-2"></div>
            <span class="text-sm font-semibold text-slate-900"
              >Real-time Sync</span
            >
          </div>
        </div>
      </div>
    </div>
  </div>
</section>
