---
interface Industry {
  title: string;
  description: string;
  iconGradient: string;
  iconPath: string;
  features: string[];
}

const industries: Industry[] = [
  {
    title: "Sistem Informasi Terintegrasi",
    description:
      "Pengembangan sistem informasi terintegrasi untuk mengelola data, proses bisnis, dan laporan dalam satu platform yang rapi dan terpusat.",
    iconGradient: "from-blue-500 to-blue-600",
    iconPath:
      "M9 12l2 2 4-4m5.618-4.016A11.955 11.955 0 0112 2.944a11.955 11.955 0 01-8.618 3.04A12.02 12.02 0 003 9c0 5.591 3.824 10.29 9 11.622 5.176-1.332 9-6.03 9-11.622 0-1.042-.133-2.052-.382-3.016z",
    features: [
      "Manajemen data terpusat",
      "Integrasi antar modul",
      "Laporan & dashboard real-time",
    ],
  },
  {
    title: "Platform E-Commerce",
    description:
      "Solusi platform e-commerce untuk mendukung penjualan online dengan sistem yang aman, cepat, dan mudah dikembangkan.",
    iconGradient: "from-teal-500 to-teal-600",
    iconPath:
      "M12 18h.01M8 21h8a2 2 0 002-2V5a2 2 0 00-2-2H8a2 2 0 00-2 2v14a2 2 0 002 2z",
    features: [
      "Manajemen produk & pesanan",
      "Integrasi pembayaran",
      "Dashboard penjualan",
    ],
  },
  {
    title: "Landing Page Profesional",
    description:
      "Pembuatan landing page profesional dengan desain modern, performa cepat, dan struktur SEO yang optimal.",
    iconGradient: "from-blue-600 to-teal-600",
    iconPath: "M16 11V7a4 4 0 00-8 0v4M5 9h14l1 12H4L5 9z",
    features: [
      "Desain responsif",
      "Optimasi performa",
      "Siap untuk kebutuhan marketing",
    ],
  },
  {
    title: "Point of Sale (POS)",
    description:
      "Sistem Point of Sale untuk membantu pencatatan transaksi, pengelolaan stok, dan laporan penjualan secara real-time.",
    iconGradient: "from-slate-700 to-slate-800",
    iconPath:
      "M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16m14 0h2m-2 0h-5m-9 0H3m2 0h5M9 7h1m-1 4h1m4-4h1m-1 4h1m-5 10v-5a1 1 0 011-1h2a1 1 0 011 1v5m-4 0h4",
    features: [
      "Transaksi real-time",
      "Manajemen stok",
      "Laporan penjualan otomatis",
    ],
  },
  {
    title: "Sistem Informasi Kesehatan",
    description:
      "Pengembangan sistem informasi kesehatan untuk klinik, puskesmas, dan rumah sakit dengan pengelolaan data yang aman.",
    iconGradient: "from-orange-500 to-orange-600",
    iconPath:
      "M12 6V4m0 2a2 2 0 100 4m0-4a2 2 0 110 4m-6 8a2 2 0 100-4m0 4a2 2 0 110-4m0 4v2m0-6V4m6 6v10m6-2a2 2 0 100-4m0 4a2 2 0 110-4m0 4v2m0-6V4",
    features: [
      "Manajemen data pasien",
      "Antrian & layanan",
      "Keamanan data medis",
    ],
  },
  {
    title: "Aplikasi Kustom",
    description:
      "Pengembangan aplikasi kustom sesuai kebutuhan bisnis, baik berbasis web maupun mobile.",
    iconGradient: "from-purple-500 to-purple-600",
    iconPath:
      "M9 12l2 2 4-4m5.618-4.016A11.955 11.955 0 0112 2.944a11.955 11.955 0 01-8.618 3.04A12.02 12.02 0 003 9c0 5.591 3.824 10.29 9 11.622 5.176-1.332 9-6.03 9-11.622 0-1.042-.133-2.052-.382-3.016z",
    features: [
      "Sesuai kebutuhan bisnis",
      "Skalabel & fleksibel",
      "Mudah dikembangkan",
    ],
  },
];

const checkmarkPath =
  "M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z";
---

<section class="py-24 bg-linear-to-b from-slate-50 to-white">
  <div class="container mx-auto px-4 sm:px-6 lg:px-8">
    <div class="text-center mb-16">
      <div
        class="inline-block px-4 py-2 mb-4 bg-blue-100 text-blue-800 text-sm font-semibold rounded-full"
      >
        Aplikasi yang Kami Sediakan
      </div>
      <h2 class="text-4xl md:text-5xl font-bold text-slate-900 mb-6">
        Solusi untuk <span
          class="text-transparent bg-clip-text bg-linear-to-r from-blue-600 to-teal-600"
          >Setiap Bidang</span
        >
      </h2>
      <p class="text-xl text-slate-600 max-w-3xl mx-auto leading-relaxed">
        Solusi teknologi inovatif yang dirancang untuk menjawab tantangan unik
        setiap industri dan mempercepat pertumbuhan bisnis Anda di era digital.
      </p>
    </div>

    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
      {
        industries.map((industry) => (
          <div class="group bg-white rounded-2xl p-8 shadow-lg hover:shadow-2xl transition-all hover:-translate-y-2 border border-slate-100">
            <div
              class={`w-16 h-16 rounded-xl bg-linear-to-br ${industry.iconGradient} flex items-center justify-center mb-6 group-hover:scale-110 transition-transform`}
            >
              <svg
                class="w-8 h-8 text-white"
                fill="none"
                stroke="currentColor"
                viewBox="0 0 24 24"
              >
                <path
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  stroke-width="2"
                  d={industry.iconPath}
                />
              </svg>
            </div>
            <h3 class="text-2xl font-bold text-slate-900 mb-3">
              {industry.title}
            </h3>
            <p class="text-slate-600 leading-relaxed mb-4">
              {industry.description}
            </p>
            <ul class="space-y-2 text-sm text-slate-600">
              {industry.features.map((feature) => (
                <li class="flex items-center">
                  <svg
                    class="w-4 h-4 text-teal-500 mr-2"
                    fill="currentColor"
                    viewBox="0 0 20 20"
                  >
                    <path
                      fill-rule="evenodd"
                      d={checkmarkPath}
                      clip-rule="evenodd"
                    />
                  </svg>
                  {feature}
                </li>
              ))}
            </ul>
          </div>
        ))
      }
    </div>

    <!-- Bottom CTA -->
    <div class="text-center mt-16">
      <a
        href="/use-cases"
        class="inline-flex items-center px-8 py-4 text-base font-semibold text-white bg-linear-to-r from-blue-600 to-teal-600 hover:from-blue-700 hover:to-teal-700 rounded-lg shadow-lg hover:shadow-xl transition-all group"
      >
        Lihat Solusi Industri Kami
        <svg
          class="w-5 h-5 ml-2 group-hover:translate-x-1 transition-transform"
          fill="none"
          stroke="currentColor"
          viewBox="0 0 24 24"
        >
          <path
            stroke-linecap="round"
            stroke-linejoin="round"
            stroke-width="2"
            d="M17 8l4 4m0 0l-4 4m4-4H3"></path>
        </svg>
      </a>
    </div>
  </div>
</section>
